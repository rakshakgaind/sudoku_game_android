<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sudoku" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <!--    Theme.AppCompat.Light.NoActionBar-->

    <style name="Theme.Sudoku.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sudoku.ButtonStyle">
        <item name="android:layout_height">@dimen/_34sdp</item>
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:textSize">@dimen/_11sdp</item>

    </style>

    <style name="Theme.Sudoku.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Sudoku.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>